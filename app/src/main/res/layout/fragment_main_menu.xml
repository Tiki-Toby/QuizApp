<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6">

        <Button
            android:id="@+id/main_menu_play_button"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="15dp"
            android:text="@string/play_last"
            android:theme="@style/default_button_style" />

        <Button
            android:id="@+id/main_menu_test_button"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="15dp"
            android:text="@string/play"
            android:theme="@style/default_button_style" />

        <Button
            android:id="@+id/main_menu_settings_button"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:text="@string/settings"
            android:theme="@style/default_button_style" />

        <Button
            android:id="@+id/main_menu_exit_button"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="@string/exit"
            android:theme="@style/default_button_style" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>